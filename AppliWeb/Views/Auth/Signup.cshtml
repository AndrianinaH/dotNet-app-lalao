
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Signup</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @Styles.Render("~/Login/css")
</head>
<body>

    <main>
        <div class="body centreo grey lighten-4">
            <div class="section"></div>
            <h3 class="@ViewBag.color-text text-darken-1">.NET App Lalao</h3>
            <h5 class="@ViewBag.color-text text-darken-1">Inscrivez-vous</h5>
            <div class="section"></div>

            <div class="container">
                <div class="z-depth-1 grey lighten-4 row login-box">
                    @using (Html.BeginForm("Inscription", "Auth"))
                    {
                        <input type='hidden' name="Statut" value="0" required>
                        <input type='hidden' name="Type" value="2" required>
                        <input type="hidden" name="DateCreation" value="@DateTime.Now" required>
                        <div class='input-field col s12'>
                            <input type='text' id='mail' name="Nom" required>
                            <label for='mail'>Username</label>
                        </div>
                        <div class='input-field col s12'>
                            <input type='password' id='password' name="Password" required>
                            <label for='password'>Mot de passe</label>
                        </div>
                        <div class="my-divider"></div>
                        <br>
                        <div class="centreo">
                            <div class='row'>
                                <button type='submit' class='col s12 btn btn-large waves-effect @ViewBag.color darken-1'>S'inscrire</button>
                            </div>
                        </div>
                    }
                </div>
                <div>
                    <a class="@ViewBag.color-text text-darken-1" href="/Auth/Login">Vous possédez un compte, Connectez-vous</a>
                </div>
                <br>
                <p>@ViewBag.loginError </p>
                <br>
            </div>
            <!-- fin container -->
        </div>
    </main>

</body>
</html>
@Scripts.Render("~/ScriptMin/js")

<script>
    $(document).ready(function () {
        //------------- sidenav
        $(".button-collapse").sideNav();
        $(".collapsible").collapsible();

        //------------- select
        $("select").material_select();

        //-------------  tabs
        $("ul.tabs").tabs();

        //--------------- activer modal
        $('.modal').modal();
    });
</script>
